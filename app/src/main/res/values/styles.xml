<?xml version="1.0" encoding="utf-8"?>

<!-- Estilo dos Components -->
<resources>
    <!-- Container -->
    <style name="ContainerInputs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">380dp</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Inputs -->
    <style name="InputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:maxLength">25</item>
        <item name="background">@drawable/input_text</item>
        <item name="android:layout_marginHorizontal">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <!--    pq nao funciona?? -->
    <!--    <item name="background">@drawable/input_text</item>-->

    <!-- Buttons -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:textColor">@color/brown_dark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ButtonDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/brown_dark</item>

    </style>

